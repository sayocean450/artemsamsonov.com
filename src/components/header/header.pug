mixin header(modeValue="inactive")
    include ../icon/icon
    div.header(class!=attributes.class)
        div.header__logo
            a.header__logo-link(href="index.html") артём сошников
        div.header__menu_mobile#modeValue
                if modeValue === 'active'
                    a(href="javascript:history.back()")
                        +iconClose('24px').icon_white
                else
                    a(href="menu.html")
                        +iconMenu('24px').icon_white
        div.header__menu
            a.header__menu-elem(href="writing.html") проза
            a.header__menu-elem(href="articles.html") писательский дневник
            a.header__menu-elem(href="contacts.html") контакты
